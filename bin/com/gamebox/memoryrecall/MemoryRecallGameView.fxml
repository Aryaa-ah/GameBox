<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="layout" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gamebox.memoryrecall.MemoryRecallGameController"
      alignment="CENTER" spacing="20" stylesheets="@style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="emojiLabel" text="" style="-fx-font-size: 72px;" />

    <Label fx:id="roundLabel" text="Round: 1/5" style="-fx-font-size: 16px;" />
    <Label fx:id="scoreLabel" text="Score: 0" style="-fx-font-size: 16px;" />

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="option1" prefWidth="80" prefHeight="60" style="-fx-font-size: 24px;" />
        <Button fx:id="option2" prefWidth="80" prefHeight="60" style="-fx-font-size: 24px;" />
        <Button fx:id="option3" prefWidth="80" prefHeight="60" style="-fx-font-size: 24px;" />
        <Button fx:id="option4" prefWidth="80" prefHeight="60" style="-fx-font-size: 24px;" />
    </HBox>

    <Label fx:id="resultLabel" text="" style="-fx-font-size: 18px;" />

    <Button fx:id="exitButton" text="❌ Exit to Menu" style="-fx-font-size: 14px;" />
</VBox>
